<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/skin_linear_layout"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/skin_img"
        android:contentDescription="skin"
        tools:ignore="Hardc odedText,HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skin_check"
        android:background="@drawable/ic_check_green_24dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:contentDescription="check" />

</LinearLayout>